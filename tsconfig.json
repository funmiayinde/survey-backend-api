{
    "compilerOptions": {
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "strict": false,
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "config/*"
            ]
        }
    },
    "types" : [
        "node"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*",
        "config/*"
    ],
    "exclude": [
        "node_modules",
        "src/test/**/*.js"
    ]
}
